<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">

<html>
<head>
	<title>KangarooBox Admin</title>
	<meta http-equiv="expires"	content="0" 	/>
	<meta http-equiv="pragma"	content="no-cache"	/>
	<meta http-equiv="cache-control"	content="no-cache"	/>
	<meta http-equiv="content-type"	content="text/html; charset=utf-8"	/>
		
	<%= stylesheet_link_tag "menu_style.css" %>	
	<%= stylesheet_link_tag "perfect_2.css" %>
	<%= stylesheet_link_tag "chart_layout.css" %>
	
	<%= javascript_include_tag :defaults %>
	
</head>

<!--<body onload="Effect.Fade('flash', { duration: 3.0 });">-->
<body>

<div class="header">
	<%= image_tag("header.gif") %>
	
	<div class="welcome">
		<% unless logged_in? %>
			<p><%= link_to "Log In", :controller => "sessions", :action => "new" %></p>
		<% else %>
			<p><%= link_to "Log Out", :controller => "sessions", :action => "destroy" %></p>
			<p>User: <%= session[:user_name] %></p>
		<% end %>
	</div>
	
	<div class="menu bubplastic horizontal gray">
	<% unless logged_in? %>
		<%= generate_navigation [
			{ :text => 'Status',	:url => { :action => 'index' } },] %>
	<% else %>
		<%= generate_navigation [
			{ :text => 'Status',	:url => { :action => 'index' } },
			{ :text => 'User',		:url => { :action => 'user' } },
			{ :text => 'Network',	:url => { :action => 'network' } },
			{ :text => 'Date / Time',	:url => { :action => 'datetime' } },
			{ :text => 'Email',		:url => { :action => 'email' } },] %>
	<% end %>

		<br class="clearit" />
	</div>
</div>
	
<div class="colmask rightmenu">
	<%= flash_helper %>

	<div class="colleft">
		<%= yield %>
	</div>
</div>

<div class="footer">
	<span class="left"><%= Time.now %></span>
<!--	<span class="right">v<%= $VERSION %></span>-->
<!--	<p>&copy; 2006-2008 KangarooBox LLC.  All Rights Reserved.</p>-->
</div>

</body>
</html>
